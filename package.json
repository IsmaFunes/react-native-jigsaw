{
  "name": "react-native-jigsaw",
  "description": "Root package.json for workspaces",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "example"
    ],
    "nohoist": [
      "**/packages/**/react-native-web",
      "/react-native-web/**"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/draftbit/react-native-jigsaw.git"
  },
  "author": "Draftbit <services@draftbit.com> (https://draftbit.com)",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "crosslink": "lerna link",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "typescript": "tsc --noEmit --composite false",
    "test": "jest",
    "clean:modules": "lerna run clean:modules && rm -rf node_modules",
    "build": "lerna run prepare",
    "build:clean": "lerna run clean",
    "release": "# lerna publish",
    "example": "yarn --cwd example",
    "pretty": "prettier --write .",
    "upload:run": "node ./scripts/collector.js",
    "upload:test": "bash ./scripts/test-collector.bash",
    "version:expo": "lerna version major --no-push",
    "version:major": "lerna version minor --no-push",
    "version:minor": "lerna version patch --no-push",
    "version:patch": "echo \"No patch versions: See root README.md\"",
    "watch": "f() { yarn lerna run prepare --stream --scope @draftbit/$@ --include-dependencies && yarn nodemon --watch packages/$@ --ignore packages/$@/lib/ --ext ts,tsx,js,json --exec \"yarn lerna run prepare --stream --scope @draftbit/$@\"; }; f"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.20",
    "babel-jest": "^26.6.3",
    "commitlint": "^8.3.5",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.6.1",
    "json-server": "^0.16.3",
    "lerna": "^3.22.1",
    "metro-react-native-babel-preset": "^0.65.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.0.5",
    "react-native-web": "~0.13.12",
    "typescript": "~4.0.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript && yarn test && yarn pretty --check"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testRegex": "/__tests__/.*\\.(test|spec)\\.(js|tsx?)$",
    "setupFiles": [
      "<rootDir>/jest/setup.js"
    ],
    "moduleNameMapper": {
      "@draftbit/([^/]+)": "<rootDir>/packages/$1/src"
    },
    "preset": "react-native"
  },
  "prettier": {
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "16"
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "react-native/no-inline-styles": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "semi": true,
          "singleQuote": false,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "scripts",
    "example/web-build",
    "node_modules/",
    "lib/",
    "__generated__"
  ],
  "lint-staged": {
    "*.{js,ts,tsx,md,scss,css,json}": [
      "prettier --write"
    ]
  }
}
